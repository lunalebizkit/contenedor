<div class="container mt-3">
    <table class="table table-bordered mt-3">
        <thead class="table-dark text-center">
            <h3 style="text-align: center;"><u> Nuevo Cliente </u></h3>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Direccion</th>
                <th scope="col">E-mail</th>
                <th scope="col">Cuit-Cuil-Dni</th>
                <th scope="col">Usuario</th>
                <th scope="col">Contraseña</th>
            </tr>
        </thead>
        
            <tbody class="table-warning text-center">
                <form action="/links/add" method="POST">
                <tr>
                    <td><input type="text" class="form-control" name="nombre" placeholder="Nombre y Apellido" required
                            autofocus></td>
                    <td> <input type="text" class="form-control" name="direccion" placeholder="Direccion" required></td>
                    <td> <input type="email" class="form-control" name="email" placeholder="Correo Electronico"
                            pattern="[a-zA-Z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required></td>
                    <td><input type="text" class="form-control" name="cuit" placeholder="cuit-cuil-dni" required></td>
                    <td> <input type="text" class="form-control" name="usuario" placeholder="Usuario" required></td>
                    <td> <input type="text" class="form-control" name="contrasenia" placeholder="Contraseña" required>
                    </td>
                </tr>
            </tbody>
    </table>
    <div class="form-group">
        <button class="btn btn-success btn-lg"> Guardar Cliente</button>
    </div>
    </form>
</div>