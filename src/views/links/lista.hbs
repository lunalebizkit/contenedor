<div>
  <table class="table table-bordered">
    <thead class="thead-dark">
      <h3>Hola {{user.nombre}} </h3> <a href = '/src/public/csv.csv' download = "Tabla de Usuarios.csv" class="btn btn-warning">Descargar Data</a>
      <tr>
        <th scope="col"></th>
        <th scope="col">Nombre del Cliente</th>
        <th scope="col">CUIT- CUIL-DNI</th>
        <th scope="col">Direccion</th>
        <th scope="col">Contactos</th>
        <th scope="col">Opciones</th>
      </tr>
    </thead>
    {{#each usuario}}
    <tbody>
      <tr>
        <th scope="row"></th>
        <td>{{nombre}}</td>
        <td>{{cuit}}</td>
        <td>{{direccion}}</td>
        <td><a href="/links/agregarContacto/{{id}}" class="btn btn-info">Agregar contacto </a> </td>
        <td><a href="/links/editar/{{id}}" class="btn btn-success">Editar </a>
          <a href="/links/eliminar/{{id}}" class="btn btn-danger"> Eliminar</a></td>
        {{else}}
        <div class="col-md-4 mx-auto">
          <div class="card card-body text-center">
            <p>No hay clientes aun</p>
            <a href="/links/add">Agregar Cliente</a>
          </div>
        </div>
        {{/each}}
      </tr>
  </table>
</div>