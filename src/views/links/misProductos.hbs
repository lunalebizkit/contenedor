<div class="row row-cols-md-3 g-2 mt-2 mb-5">
    
    {{#each misProductos}}
    <div>
    <div class="card border-danger bg-transparent mb-1 " style="max-width: 28rem;">
        <div class="card-header text-center bg-white">Nro de Factura: <b>{{Numero}}</b><br> Tipo: <b>{{Tipo}}</b><br> Fecha: <b>{{Fecha}}</b></div>
        <div class="card-body text-dark">
            <h5 class="card-title text-center"><u> Producto</u></h5>
           
            <p class="card-text text-center">Nro Contenedor:  <b>{{NroContenedor}}</b> <br> Marca: <b>{{marca}}</b> <br> Capacidad: <b>{{IdCapacidad}}</b> Pies.</p>
        </div>
        <div class="card-footer text-center bg-white"><p>Sucursal: <b>{{Sucursal}}</b></p></div>
    </div>
    </div>
    {{else}}
    <div class="col-md-4 mx-auto py-5">
        <div class="card">
            <div class="card-body text-center">
                <p><h5><em>Aun No Tienes Productos!!!</em></h5></p>
                <a href="/links/venta/{{usuario.id}}">Ingresa Aqui!</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>